<p id="notice"><%= notice %></p>

<h1>Blog Entry</h1>

<table>
  <thead>
    <tr>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="panel panel-default"></div>
          <div class="panel-heading"> 
             <div><%= post.title%> - </div>
             <div><%= post.user.email %></div>
             <div> - <%= post.user.username %></div>
               
             </div>
          <DIV class="panel-body">
             <%= post.blog_entry %>
          </DIV>

         
            
          </td>
        <td><div class="btn btn-primary"> <%= link_to 'Show', post %></div></td>
        <td><div class="btn btn-info"><%= link_to 'Edit', edit_post_path(post) %></div></td>
        <td><div class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>

<br>

<%= link_to 'New Post', new_post_path %>
